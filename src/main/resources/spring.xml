<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="_druidDataSource" class="com.alibaba.druid.pool.DruidDataSource">
		<property name="driverClassName" value="org.mariadb.jdbc.Driver"></property>
		<property name="url" value="jdbc:mariadb://127.0.0.1:3306/hxc" />
		<property name="username" value="hxc" />
		<property name="password" value="hxc" />
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="_druidDataSource" />
		<property name="configLocation" value="classpath:mybatis-config.xml" />
	</bean>
</beans>